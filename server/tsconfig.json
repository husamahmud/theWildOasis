{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"types": [
			"@prisma/client",
			"node",
			"@types/bcryptjs"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
